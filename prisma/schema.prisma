generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  password String
  name     String?
  posts    Post[]
  comments Comment[]
}

model Post {
  id      String  @id @default(cuid())
  title   String
  content String?
  userId  String
  user    User    @relation(fields: [userId], references: [id])
  image   Image   @relation(fields: [imageId], references: [id])
  imageId String @unique
}

model Image {
  id       String    @id @default(cuid())
  url      String
  post     Post?
  comments Comment[]
}

model Comment {
  id      String @id @default(cuid())
  content String
  userId  String
  user    User   @relation(fields: [userId], references: [id])
  imageId String
  image   Image  @relation(fields: [imageId], references: [id])
}
